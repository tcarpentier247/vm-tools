#cloud-config
autoinstall:
  version: 1
  locale: en_US
  early-commands:
    - systemctl stop ssh.service
    - systemctl stop ssh.socket
  keyboard:
      layout: fr
      variant: latin9
  ssh:
    install-server: true
    allow-pw: true
  late-commands:
    - |
      if [ -d /sys/firmware/efi ]; then
        apt-get install -y efibootmgr
        efibootmgr -o $(efibootmgr | perl -n -e '/Boot(.+)\* ubuntu/ && print $1')
      fi
    - curtin in-target -- apt-get update
    - curtin in-target -- apt-get install -y qemu-guest-agent qemu-kvm virtinst virt-manager libguestfs-tools bridge-utils genisoimage net-tools ifupdown apt-transport-https ca-certificates lsb-release python3-pip jq sudo openssh-server
  storage:
    config:
    - ptable: gpt
      path: /dev/vda
      wipe: superblock-recursive
      preserve: false
      name: ''
      grub_device: false
      type: disk
      id: disk-vda
    - device: disk-vda
      size: 1075M
      wipe: superblock
      flag: boot
      number: 1
      preserve: false
      grub_device: true
      type: partition
      id: partition-0
    - fstype: fat32
      volume: partition-0
      preserve: false
      type: format
      id: format-0
    - device: disk-vda
      size: 2G
      wipe: superblock
      number: 2
      preserve: false
      grub_device: false
      type: partition
      id: partition-1
    - device: disk-vda
      size: -1
      wipe: superblock
      number: 3
      preserve: false
      grub_device: false
      type: partition
      id: partition-2
    - fstype: ext4
      volume: partition-1
      preserve: false
      type: format
      id: format-1
    - name: root
      devices:
        - partition-2
      preserve: false
      type: lvm_volgroup
      id: lvm_volgroup-0
    - name: root
      volgroup: lvm_volgroup-0
      size: 100%
      wipe: superblock
      preserve: false
      type: lvm_partition
      id: lvm_partition-0
    - fstype: ext4
      volume: lvm_partition-0
      preserve: false
      type: format
      id: format-3
    - path: /
      device: format-3
      type: mount
      id: mount-3
    - path: /boot
      device: format-1
      type: mount
      id: mount-1
    - path: /boot/efi
      device: format-0
      type: mount
      id: mount-0

